# This program turns and input sentence into something more Shakesperean.
# Shakespeare Translator Version 2.Rome0. Thanks to mentor Lisa for the suggestions.  

# Creates a random Shakespearean opening
import random

start_no = random.randrange(0, 4)
openings = ["Verily,", "Forsooth,", "Troth sir,", "Hail fellow well met,", "Good, morrow"]
start = openings[start_no]

# Input
text = input("Enter a sentence. I will try to make it more Shakesperean\n")

# Converts text to lowercase. Adds final full stop/period if required.
if text[-1] != "." and text[-1] != "?" and text[-1] != "!":
  text = (text + ".")
text = text.lower()
text = (" " + text)

# Makes sure that words at the end of sentences are translated correctly.
text = text.replace(".", " .")
text = text.replace("?", " ?")
text = text.replace("!", " !")

# Common words and Shakespearean equivalents. 
text = text.replace(" be ", " beest ")
text = text.replace(" have ", " hast ")
text = text.replace(" has ", " hath ")
text = text.replace(" you ", " thou ")
text = text.replace(" do ", " dost ")
text = text.replace(" does ", " doth ")
text = text.replace(" did ", " didst ")
text = text.replace(" says ", " saith ")
text = text.replace(" she ", " the lady ")
text = text.replace(" her ", " the lady's ")
text = text.replace(" will ", " willst ")
text = text.replace(" would ", " wouldest ")
text = text.replace(" are ", " art ")
text = text.replace(" before ", " 'ere ")
text = text.replace(" it is ", " tis ")
text = text.replace(" it was ", " twas ")
text = text.replace(" were ", " wast ")
text = text.replace(" from where ", " whence ")
text = text.replace(" why ", " wherefore ")
text = text.replace(" from here ", " hence ")
text = text.replace(" often ", " oft ")
text = text.replace(" even ", " yea ")
text = text.replace(" that ", " yonder ")
text = text.replace(" wish ", " would ")
text = text.replace(" it's ", " tis ")
text = text.replace(" she's ", " the lady is ")
text = text.replace(" no ", " nay ")
text = text.replace(" hurry ", " hie ")
text = text.replace(" yes ", " ay ")
text = text.replace(" your ", " thy ")
text = text.replace(" yours ", " thine ")
text = text.replace(" my ", " mine ")
text = text.replace(" hello ", " good morrow ")
text = text.replace(" he ", " the fellow ")
text = text.replace(" his ", " the fellow's ")
text = text.replace(" he's ", " the fellow is ")
text = text.replace(" clothes ", " apparel ")
text = text.replace(" anything ", " aught ")
text = text.replace(" perhaps ", " belike ")
text = text.replace(" probably ", " belike ")
text = text.replace(" request ", " crave ")
text = text.replace(" show ", " discover ")
text = text.replace(" reveal ", " discover ")
text = text.replace(" cope ", " fare ")
text = text.replace(" stop ", " forbear ")
text = text.replace(" cope ", " fare ")
text = text.replace(" indeed ", " forsooth ")
text = text.replace(" certainly ", " forsooth ")
text = text.replace(" challenge ", " gage ")
text = text.replace(" computer ", " box of witchery ")
text = text.replace(" coding ", " witchery ")
text = text.replace(" sololearn ", " this coven of witches ")
text = text.replace(" programming ", " devilry ")
text = text.replace(" python ", " incantations ")
text = text.replace(" mirror ", " glass ")
text = text.replace(" maybe ", " haply ")
text = text.replace(" mood ", " humour ")
text = text.replace(" bad ", " ill ")
text = text.replace(" god ", " Jove ")
text = text.replace(" purpose ", " intent ")
text = text.replace(" children ", " issue ")
text = text.replace(" very ", " marvellous ")
text = text.replace(" right ", " meet ")
text = text.replace(" very ", " marvellous ")
text = text.replace(" complete ", " mere ")
text = text.replace(" total ", " mere ")
text = text.replace(" totally ", " merely ")
text = text.replace(" completely ", " merely ")
text = text.replace(" i think ", " methinks ")
text = text.replace(" open ", " ope ")
text = text.replace(" meeting ", " parley ")
text = text.replace(" head ", " pate ")
text = text.replace(" medicine ", " physic ")
text = text.replace(" chat ", " prate ")
text = text.replace(" instant ", " present ")
text = text.replace(" instantly ", " presently ")
text = text.replace(" point ", " aim ")
text = text.replace(" said ", " quoth ")
text = text.replace(" memory ", " remembrance ")
text = text.replace(" instant ", " present ")
text = text.replace(" serious ", " sad ")
text = text.replace(" instant ", " present ")
text = text.replace(" escape ", " scape ")
text = text.replace(" different ", " several ")
text = text.replace(" fun ", " sport ")
text = text.replace(" entertainment ", " sport ")
text = text.replace(" always ", " still ")
text = text.replace(" eat ", " sup ")
text = text.replace(" broken ", " undone ")
text = text.replace(" broke ", " undone ")
text = text.replace(" face ", " visage ")
text = text.replace(" want ", " need ")
text = text.replace(" promise ", " warrant ")
text = text.replace(" intelligence", " wit ")
text = text.replace(" clever ", " witty ")
text = text.replace(" intelligent ", " witty ")
text = text.replace(" funny ", " witty ")
text = text.replace(" boy ", " lad ")
text = text.replace(" girl ", " lass ")
text = text.replace(" beer ", " ale ")

# Removes additional spaces before punctuation, so final output looks right 
text = text.replace(" .", ".")
text = text.replace(" ?", "?")
text = text.replace(" !", "!")

# Converts to sentence case (found this online)
text = '. '.join(i.capitalize() for i in text.split('. '))
text = text.replace(" i ", " I ")

# Prints output
print(start + text)
